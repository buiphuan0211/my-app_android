<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailUserActivity"
  >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/image_detail" />

    <TextView
        android:id="@+id/title"
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="THÔNG TIN SINH VIÊN"
        android:textColor="@color/register_bk_color"
        android:textSize="30sp"
        android:fontFamily="serif-monospace"/>
    <EditText
        android:layout_below="@id/title"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:background="@color/register_bk_color"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>
        <TextView
            android:id="@+id/detail_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text-name"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>
        <TextView
            android:id="@+id/detail_txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text-email"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobieNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MobieNumber: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>
        <TextView
            android:id="@+id/detail_txt_mobieNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text-mb-nb"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobieNumber"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>
        <TextView
            android:id="@+id/detail_txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text-password"
            android:textSize="20sp"
            android:fontFamily="serif-monospace"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..........."
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:fontFamily="serif-monospace"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="........."
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif-monospace"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:textSize="24sp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/register_bk_color"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".........."
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif-monospace"/>
    </LinearLayout>

</RelativeLayout>